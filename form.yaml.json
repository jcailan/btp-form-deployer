{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "form.yaml",
	"description": "Schema for Form Deployer Tool (form.yaml)",
	"$ref": "#/definitions/FormDeployerConfig",
	"definitions": {
		"FormDeployerConfig": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"_schema-version": {
					"enum": [
						"0.1"
					],
					"errorMessage": "Unsupported \"_schema-version\"\n"
				},
				"description": {
					"type": "string"
				},
				"parameters": {
					"$ref": "#/definitions/Parameters"
				},
				"forms": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/Form"
					}
				}
			},
			"required": [
				"forms",
				"parameters",
				"_schema-version"
			],
			"title": "FormDeployerConfig"
		},
		"Form": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"name": {
					"type": "string"
				},
				"templates": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/Template"
					}
				}
			},
			"required": [
				"name",
				"templates"
			],
			"title": "Form"
		},
		"Template": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"name": {
					"type": "string"
				},
				"filename": {
					"type": "string"
				}
			},
			"required": [
				"filename",
				"name"
			],
			"title": "Template"
		},
		"Parameters": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"deploy-mode": {
					"enum": [
						"update",
						"overwrite"
					],
					"errorMessage": "Unsupported \"deploy-mode\""
				},
				"destination": {
					"type": "string"
				}
			},
			"required": [],
			"title": "Parameters"
		}
	}
}